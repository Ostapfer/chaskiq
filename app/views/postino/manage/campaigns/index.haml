

.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-4
    %h2 Campaigns list
    %ol.breadcrumb
      %li
        %a{:href => ""} Home
      %li.active
        %strong Campaigns list
.row
  .col-lg-12
    .wrapper.wrapper-content.animated.fadeInUp
      .ibox
        .ibox-title
          %h5 All Campaigns
          .ibox-tools
            %a.btn.btn-primary.btn-xs{:href => new_manage_campaign_path }
              Create new Campaigns
        .ibox-content
          .row.m-b-sm.m-t-sm
            .col-md-1
              %button#loading-example-btn.btn.btn-white.btn-sm{:type => "button"}
                %i.fa.fa-refresh
                Refresh
            .col-md-11
              .input-group
                %input.input-sm.form-control{:placeholder => "Search", :type => "text"}/
                %span.input-group-btn
                  %button.btn.btn-sm.btn-primary{:type => "button"} Go!
          .project-list
            %table.table.table-hover
              %tbody
                - @campaigns.each do |campaign|
                  %tr
                  %td.project-status
                    %span.label.label-primary
                      = campaign.state
                  %td.project-title
                    %a{:href => manage_campaign_path(campaign)}
                      = campaign.name
                    %br/
                    %small= campaign.created_at
                  %td.project-completion
                    %small Completion with: #{campaign.delivery_progress}%
                    .progress.progress-mini
                      .progress-bar{:style => "width: #{campaign.delivery_progress}%;"}

                  %td.project-actions

                    = link_to manage_campaign_wizard_path(campaign, "setup"), class: "btn btn-white btn-sm" do
                      %i.fa.fa-folder
                      setup

                    = link_to preview_manage_campaign_path(campaign), class: "btn btn-white btn-sm" do
                      %i.fa.fa-folder
                      Preview

                    = link_to test_manage_campaign_path(campaign), class: "btn btn-white btn-sm" do
                      %i.fa.fa-folder
                      Test

                    = link_to deliver_manage_campaign_path(campaign), class: "btn btn-white btn-sm" do
                      %i.fa.fa-folder
                      Send

                    = link_to manage_campaign_path(campaign), method: :delete, class: "btn btn-white btn-sm" do
                      %i.fa.fa-folder
                      Remove








