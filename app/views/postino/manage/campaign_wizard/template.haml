
.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-4
    %h2 Template
    %ol.breadcrumb
      %li
        %a{:href => ""} Home
      %li.active
        %strong Campaigns list
.row
  .col-lg-12
    .wrapper.wrapper-content.animated.fadeInUp
      = render partial: "wizard_steps"


      = simple_form_for @campaign, url: wizard_path do |f|

        = f.input :template_id , as: :select, collection: Postino::Template.all

        = f.submit

      = render partial: "wizard_nav"
