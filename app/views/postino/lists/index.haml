= link_to "new list" , new_list_path , class: "pull-right btn btn-default"
%h1.page-header Lists
.row.placeholders
  - @lists.each do |list|
    .col-xs-6.col-sm-3.placeholder
      %img.img-responsive{:alt => "Generic placeholder thumbnail", "data-src" => "holder.js/200x200/auto/sky"}/
      %h4= list.name
      %span.text-muted= list.state
      = link_to "edit" , edit_list_path(list)
