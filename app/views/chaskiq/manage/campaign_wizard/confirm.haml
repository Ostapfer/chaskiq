= render "menu"

.row
  .col-lg-12
    .wrapper.wrapper-content.animated.fadeInUp
      .ibox
        .ibox-title
          %h5 Confirm
          .ibox-tools
            %a.btn.btn-primary.btn-xs{:href => new_manage_campaign_path }
              Create new Template
        .ibox-content

          = render partial: "wizard_steps"

          .widget.navy-bg.p-xl
            .col-lg-6
              %h2
                %i.fa.fa-thumbs-up.fa
                All set up:
              %p Just to confirm, check the details of <strong>#{@campaign.name}</strong>"

              = link_to preview_manage_campaign_path(@campaign), class: "btn btn-primary", target: :blank do
                %i.fa.fa-eye
                  preview

              = link_to test_manage_campaign_path(@campaign), class: "btn btn-default" do
                %i.fa.fa-heartbeat
                  test

              = link_to deliver_manage_campaign_path(@campaign), class: "btn btn-danger", data: {confirm: "Sure?"} do
                %i.fa.fa-paper-plane
                  send

            .col-lg-6
              %ul.list-unstyled.m-t-md
                %li
                  = image_tag(@campaign.logo)
                %li
                  %strong Subject:
                  =" #{@campaign.subject}"
                %li
                  %strong from name:
                  =" #{@campaign.from_name}"
                %li
                  %strong From email:
                  =" #{@campaign.from_email}"
                %li
                  %strong Reply email:
                  =" #{@campaign.reply_email}"
                %li
                  %strong Description:
                  =" #{@campaign.description}"

            .clearfix

          = render partial: "wizard_nav"
