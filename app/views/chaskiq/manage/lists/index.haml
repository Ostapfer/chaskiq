= render "menu"

.row
  .col-lg-12
    .wrapper.wrapper-content
      .ibox

        .ibox-title
          %h5 All Lists
          .ibox-tools
            %a.btn.btn-success.btn-xs{:href => new_manage_list_path }
              %i.fa.fa-plus
              Create new List

        .ibox-content

          .project-list
            %table.table.table-hover
              %tbody
                - @lists.each do |list|
                  %tr

                    %td.project-title
                      %a{:href => manage_list_path(list)}
                        = list.name
                      %br/
                      %small= list.created_at

                    %td.project-actions

                      = link_to edit_manage_list_path(list), class: "btn btn-white btn-sm" do
                        %i.fa.fa-edit
                        Edit

                      = link_to manage_list_path(list), class: "btn btn-white btn-sm", data:{ method: :delete, confirm: "sure?"} do
                        %i.fa.fa-times
                        Destroy

